#!/bin/bash

ICONO1="/usr/share/icons/hicolor/scalable/apps/chromium-browser.svg";
ICONO2="/usr/share/icons/hicolor/scalable/apps/empathy.svg";
NOM="PRUEBA"
FICH=$HOME"/Escritorio/"$NOM".desktop";
LINEA=`tail -n 1 $FICH`;
LABEL1=`echo $LINEA | cut -d "=" -f 1`;
LABEL2=`echo $LINEA | cut -d "=" -f 2`;

echo "#!/usr/bin/env xdg-open" >> $FICH;
echo "[Desktop Entry]" >> $FICH;
echo "Encoding=UTF-8" >> $FICH; 
echo "Version=1.0" >> $FICH;
echo "Type=Application" >> $FICH;
echo "Terminal=false" >> $FICH;
echo "Exec=/home/crodriguezmecha/Scripts/prueba_icono" >> $FICH;

if [ "$LABEL1" = "Icon" ]; then {
	
	if [ "$LABEL2" = "$ICONO1" ]; then {
		
		echo "Name[es_ES]="$NOM"[ARMED]" >> $FICH;
		echo "Name="$NOM"[ARMED]" >> $FICH;
		echo "Icon="$ICONO2 >> $FICH;
		
	} else {
		
		echo "Name[es_ES]="$NOM"[DISARMED]" >> $FICH;
		echo "Name="$NOM"[DISARMED]" >> $FICH;
		echo "Icon="$ICONO1 >> $FICH;
		
	} fi;
	
} else {
	
	echo "Name[es_ES]="$NOM"[ERROR]" >> $FICH;
	echo "Name="$NOM"[ERROR]" >> $FICH;
	echo "Icon=gnome-panel-launcher" >> $FICH;
	exit -1;
	
} fi;

exit 0;


















echo "// AUTOGENERATED"
echo "options {" >> $NCONF2;
echo "directory \"/var/cache/bind\";" >> $NCONF2;
echo "forwarders {" >> $NCONF2;
for LINEA in $LIST; do {
				
	if [ "$LINEA" = "nameserver" ]; then {
					
		echo `echo $IPS | cut -d\  -f $INDEX`";" >> $NCONF2;

	} fi;
				
	INDEX=$((INDEX+1));
				
} done;
